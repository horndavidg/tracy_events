<%= form_for( [@user, @event], html:{class: "form-horizontal", role: "form"}) do |f| %> 
<%= render partial:"shared/errors", locals:{instance:@event} %>
<div class="form-group">
    <%= f.label :name, class: "col-sm-2" %>
    <div class="col-sm-4">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :start_date, class: "col-sm-2" %>
    <div class="col-sm-4">
     <%= f.date_field :start_date, class: "form-control" %>
    </div>
    <%= f.label :end_date, class: "col-sm-2" %>
    <div class="col-sm-4">
     <%= f.date_field :end_date, class: "form-control" %>
    </div>
    </div>
    <div class="form-group">
    <%= f.label :start_time, class: "col-sm-2" %>
    <div class="col-sm-4">
      <%= f.time_field :start_time, class: "form-control" %>
    </div>
    <%= f.label :end_time, class: "col-sm-2" %>
    <div class="col-sm-4">
      <%= f.time_field :end_time, class: "form-control" %>
    </div>
    </div>
   <div class="form-group">
    <%= f.label :address, class: "col-sm-2" %>
    <div class="col-sm-4">
      <%= f.text_field :address, class: "form-control", placeholder:"address in Tracy" %>
    </div>
  </div>   
  <div class="form-group">
    <%= f.label :lat, class: "col-sm-2" %>
    <div class="col-sm-4">
      <%= f.text_field :lat, class: "form-control" %>
    </div>
     <%= f.label :long, class: "col-sm-2" %>
    <div class="col-sm-4">
      <%= f.text_field :long, class: "form-control" %>
    </div>

  </div>
  <div class="form-group">
    <%= f.label :description, class: "col-sm-2" %>
    <div class="col-sm-4">
      <%= f.text_area :description, class: "form-control", :cols => "30", :rows => "8" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10 col-sm-offset-2">
      <%= f.submit class:"btn btn-primary" %>
 
    </div>
  </div>
  
<% end %>